<li class="row rating-<%= book.rating %>">
  <div class="col-sm-3">
    <a href="#">
      <%= img_from_amazon(book.amazon_id) %>
    </a>
    <div class="text-center rating"><strong><%= book.rating %></strong>/5</div>
  </div>

  <div class="col-sm-8">
    <h3>
      <%= link_to book.title, user_book_path(user, book) %>
    </h3>
    <p class="text-muted"><em>Written by <%= book.author %></em></p>
    <div>
      <p>
        <%= book.description %>
      </p>
    </div>
  </div>
</li>
