<li class="row">
  <div class="col-sm-3">
    <a href="#">
      <%= img_from_amazon(book.amazon_id) %>
    </a>
  </div>

  <div class="col-sm-8 book-description">
    <h3>
      <%= link_to book.title, user_book_path(user, book) %>
    </h3>
    <p class="text-muted"><em>Written by <%= book.author %></em></p>
    <div>
      <p>
        <%= book.description %>
      </p>
      <span>
        <% book.categories.each do |category| %>
          <%= link_to category.name, '#', class: 'label label-primary' %>
        <% end %>
      </span>
    </div>
  </div>
</li>
